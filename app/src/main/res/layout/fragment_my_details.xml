<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:text="My Details"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/restaurant_logo"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />




        <TextView
            android:id="@+id/nameTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/roboto"
            android:text="Username"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImageView" />


        <EditText
            android:id="@+id/namedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/start_registration_editext_bg"
            android:clickable="false"
            android:drawableEnd="@drawable/ic_blue_tick"
            android:drawablePadding="@dimen/_5sdp"
            android:editable="false"
            android:focusable="false"
            android:fontFamily="@font/roboto"
            android:inputType="number"
            android:maxLength="20"
            android:maxLines="1"
            android:padding="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/natural_grey"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameTextview" />

        <TextView
            android:id="@+id/phoneTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:text="Phone Number"
            android:textAllCaps="false"
            android:textColor="@color/other_black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/namedittext"
            app:layout_constraintTop_toBottomOf="@id/namedittext" />


        <EditText
            android:id="@+id/phoneEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:inputType="number"
            android:background="@drawable/start_registration_editext_bg"
            android:drawableEnd="@drawable/ic_blue_tick"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/_10sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:maxLines="1"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:maxLength="10"
            android:textColor="@color/text_black"
            android:textColorHint="@color/natural_grey"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="@id/namedittext"
            app:layout_constraintStart_toStartOf="@id/namedittext"
            app:layout_constraintTop_toBottomOf="@id/phoneTextview" />


        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:text="Pincode"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/phoneEdittext"
            app:layout_constraintTop_toBottomOf="@id/phoneEdittext" />

        <EditText
            android:id="@+id/pincodeEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/start_registration_editext_bg"
            android:drawableEnd="@drawable/ic_blue_tick"
            android:inputType="number"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:maxLines="1"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:maxLength="6"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/natural_grey"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="@+id/phoneEdittext"
            app:layout_constraintStart_toStartOf="@+id/phoneEdittext"
            app:layout_constraintTop_toBottomOf="@+id/name_textview" />

        <TextView
            android:id="@+id/award_category_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:text="State"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/pincodeEdittext"
            app:layout_constraintTop_toBottomOf="@id/pincodeEdittext" />

        <EditText
            android:id="@+id/stateEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/start_registration_editext_bg"
            android:drawableEnd="@drawable/ic_blue_tick"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/_10sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:maxLines="1"
            android:maxLength="10"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/natural_grey"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="@+id/pincodeEdittext"
            app:layout_constraintStart_toStartOf="@+id/pincodeEdittext"
            app:layout_constraintTop_toBottomOf="@+id/award_category_textview" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:text="Address"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/stateEdittext"
            app:layout_constraintTop_toBottomOf="@id/stateEdittext" />

        <EditText
            android:id="@+id/addressEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/start_registration_editext_bg"
            android:drawableEnd="@drawable/ic_blue_tick"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/_10sdp"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            android:drawablePadding="@dimen/_5sdp"
            android:maxLines="1"
            android:maxLength="50"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/natural_grey"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="@+id/stateEdittext"
            app:layout_constraintStart_toStartOf="@+id/stateEdittext"
            app:layout_constraintTop_toBottomOf="@+id/addressTextView" />

        <TextView
            android:id="@+id/landMarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:text="@string/nearest_landmark"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@id/addressEdittext"
            app:layout_constraintTop_toBottomOf="@id/addressEdittext" />

        <EditText
            android:id="@+id/landmarkEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/start_registration_editext_bg"
            android:drawableEnd="@drawable/ic_blue_tick"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/_10sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:maxLines="1"
            android:maxLength="50"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/text_black"
            android:textColorHint="@color/natural_grey"
            android:textSize="@dimen/_13sdp"
            android:editable="false"
            android:focusable="false"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="@+id/addressEdittext"
            app:layout_constraintStart_toStartOf="@+id/addressEdittext"
            app:layout_constraintTop_toBottomOf="@+id/landMarkTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>