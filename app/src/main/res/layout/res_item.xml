<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:layout_marginTop="9dp"
    android:layout_marginEnd="9dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/resturant_bg"
    android:elevation="15dp">

    <TextView
        android:id="@+id/foodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Radission Blue"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ratingImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_ratings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/foodTextView"
        app:layout_constraintTop_toBottomOf="@id/foodTextView" />

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="3.9"
        android:textColor="#6C1F1F"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ratingImageView"
        app:layout_constraintStart_toEndOf="@id/ratingImageView"
        app:layout_constraintTop_toTopOf="@id/ratingImageView" />


</androidx.constraintlayout.widget.ConstraintLayout>